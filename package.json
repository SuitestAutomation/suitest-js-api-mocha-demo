{
  "name": "suitest-js-api-mocha-demo",
  "version": "1.0.0",
  "description": "Demo set up for Suitest JS API",
  "dependencies": {
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.22.0",
    "mochawesome": "^3.1.2",
    "suitest-js-api": "^1.8.2"
  },
  "scripts": {
    "interactive": "suitest interactive mocha --reporter mocha-junit-reporter --no-timeouts --exit \"./test/dummy.test.js\"",
    "interactive:logs": "suitest interactive --log-dir=e2e mocha --no-timeouts --exit \"./test/dummy.test.js\"",
    "interactive:debug": "suitest interactive --inspect-brk=9121 node ./node_modules/mocha/bin/_mocha --no-timeouts --exit \"./test/debug.test.js\"",
    "interactive:repl": "suitest interactive mocha --no-timeouts --exit \"./test/repl.test.js\"",
    "automated": "suitest automated mocha --no-timeouts --exit \"./test/dummy.test.js\"",
    "automated:logs": "suitest automated --log-dir=e2e mocha --no-timeouts --exit \"./test/dummy.test.js\"",
    "interactive:watchMe": "suitest interactive mocha --reporter mocha-junit-reporter --reporter-options outputs=true --no-timeouts --exit \"./watchMeTests/*.test.js\"",
    "automated:watchMe": "suitest automated mocha --reporter mocha-junit-reporter --reporter-options outputs=true,mochaFile=./path_to_your/report[hash].xml,toConsole=true --no-timeouts --exit \"./watchMeTests/*.test.js\"",
    "automated:watchMe:junit-reporter": "suitest automated --log-dir=e2e PROPERTIES=DEVICE_ID:'\"${SUITEST_CHILD_PROCESS%%|*}\"' mocha --reporter mocha-junit-reporter --reporter-options outputs=true,toConsole=true,mochaFile=./reports/'\"${SUITEST_CHILD_PROCESS%%|*}\"'.xml --no-timeouts --exit \"./watchMeTests/*.test.js\"",
    "automated:watchMe:xunit": "suitest automated --log-dir=e2e mocha --reporter xunit --reporter-options output=./xunit-reports/'\"${SUITEST_CHILD_PROCESS%%|*}\"'.xml,suiteName=DEVICE_ID-'\"${SUITEST_CHILD_PROCESS%%|*}\"' --no-timeouts --exit \"./watchMeTests/*.test.js\"",
    "automated:watchMe:tap": "suitest automated --log-dir=e2e mocha --reporter tap  --no-timeouts --exit \"./watchMeTests/*.test.js\"",
    "automated:watchMe:mochawesome": "suitest automated --log-dir=e2e mocha --reporter mochawesome --reporter-options reportTitle=DEVICE_ID-'\"${SUITEST_CHILD_PROCESS%%|*}\"',reportFilename='\"${SUITEST_CHILD_PROCESS%%|*}\"',autoOpen=true  --no-timeouts --exit \"./watchMeTests/*.test.js\""
  },
  "devDependencies": {
    "xunit-viewer": "^5.1.10"
  }
}
