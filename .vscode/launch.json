    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug dummy test",
            "program": "${workspaceFolder}/node_modules/suitest-js-api/lib/testLauncher/index.js",
            "args": [
                "interactive",
                "--inspect-brk=9121",
                "node",
                "./node_modules/mocha/bin/_mocha",
                "--no-timeouts",
                "--exit",
                "./test/dummy.test.js",
            ],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        }
    ]
}